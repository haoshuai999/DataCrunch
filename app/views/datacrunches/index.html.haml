%h1 Welcome to the index page


= form_tag datacrunches_path, :class =>'upload-form', :multipart=>true do

  = file_field_tag 'Upload', accept: '.csv, .json, .xlsx', :required => true

  = label :datacrunch, :title, 'Title'
  = text_field :datacrunch, 'title', :required => true

  = label :datacrunch, :description, 'Description'
  = text_field :datacrunch, "describe your data"


  = submit_tag 'Upload', :class => 'btn btn-primary'


#flash-display
  - flash.each do |type, msg|
    %div{:class => "alert alert-#{type == :notice ? "success" : type} fadeout", "data-dismiss" => "alert"}
      %button.close &times;
      = msg if msg.is_a?(String)

